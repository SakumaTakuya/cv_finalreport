#:kivy 1.11.1
#: import NoTransition kivy.uix.screenmanager.NoTransition
#: import Screen kivy.uix.screenmanager.Screen

<SelectReferenceScreen>:
    BoxLayout:
        orientation: "vertical"
        RectDrawImage:
            id: image
            size_hint_y: 0.9
            texture: root.texture
            can_draw: root.is_loaded
            on_add_point: root.add_pixels(*args)
            on_complete: root.activate_next()
            allow_stretch: True
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.1
            Button:
                id: select_button
                text: "select image"
                disabled: False
                on_press: root.show_load()
                on_press: image.clear()
            Button:
                id: next_button
                text: "next >"
                disabled: True
                on_press: root.go_next()


<SelectDestinationScreen>:
    BoxLayout:
        orientation: "vertical"
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.9
            Image:
                texture: root.texture
                size_hint_x: 1
                allow_stretch: True
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.1
            Button:
                id: select_button
                text: "select image"
                disabled: False
                on_press: root.show_load()
            Button:
                id: next_button
                text: "next >"
                disabled: True
                on_press: root.go_next()


<SelectTargetScreen>:
    BoxLayout:
        orientation: "vertical"
        VideoPlayer:
            id: video
            source: root.video_source
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: 0.1
            Button:
                id: select_button
                text: "select video"
                disabled: False
                on_press: root.show_load()
            Button:
                id: next_button
                text: "next >"
                disabled: True
                on_press: root.go_next()
            


<MatchMoveWidget>:
    video_width: 1024
    BoxLayout:
        orientation: "vertical"
        size: root.size
        ActionBar:
            ActionView:
                ActionPrevious:
        ScreenManager:
            id: manager
            transition: NoTransition()
            SelectReferenceScreen:
                id: select_reference
                image_size: 512
                name: "select_reference"
                next_state: "select_dest"
                on_leave: root.set_reference(self.cv_img, self.points)
            SelectDestinationScreen:
                name: "select_dest"
                image_size: 512
                next_state: "select_target"
                on_leave: root.set_destination(self.cv_img)
            SelectTargetScreen:
                id: select_target
                name: "select_target"
                next_state: "select_command"
                # on_leave: root.set_video_target(self.video_source)
            Screen:
                name: "select_command"
                BoxLayout:
                    orientation: "vertical"
                    Button:
                        text: "do with akaze"
                        on_press: root.set_video_target(select_target.video_source, "AKAZE")
                    Button:
                        text: "do with sift"
                        on_press: root.set_video_target(select_target.video_source, "SIFT")
                    Button:
                        text: "back to select reference"
                        on_press: manager.current = "select_reference"
                    Button:
                        text: "back to select destination"
                        on_press: manager.current = "select_dest"
                    Button:
                        text: "back to select target"
                        on_press: manager.current = "select_target"